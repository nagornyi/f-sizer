<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color of the spinner -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Background color -->
            <corners android:radius="4dp"/> <!-- Rounded corners -->
        </shape>
    </item>
    <!-- Border around the spinner -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparent fill -->
            <stroke
                android:width="2dp"
                android:color="#0093af"/> <!-- Border color -->
            <corners android:radius="4dp"/> <!-- Same radius for rounded corners -->
        </shape>
    </item>
</layer-list>
